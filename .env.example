# ============================================
# SUFBOT V5 - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================
# Discord Bot Configuration
# ============================================
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_GUILD_ID=your_dev_guild_id_for_testing

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://example:example@localhost:5432/sufbot_db?schema=public
POSTGRES_USER=sufbot
POSTGRES_PASSWORD=sufbot_password
POSTGRES_DB=sufbot_db

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# API Configuration
# ============================================
API_PORT=4000
API_URL=http://localhost:4000
API_SECRET=your_super_secret_api_key_min_32_chars

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET=your_jwt_secret_key_min_32_characters
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_min_32_chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ============================================
# Panel Configuration
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_BOT_INVITE_URL=https://discord.com/api/oauth2/authorize?client_id=YOUR_CLIENT_ID&permissions=8&scope=bot%20applications.commands
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_min_32_characters

# ============================================
# WebSocket Configuration
# ============================================
WS_PORT=4001
WS_SECRET=your_websocket_secret_key

# ============================================
# Sharding Configuration
# ============================================
SHARD_COUNT=auto
SHARDS_PER_CLUSTER=2

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=60

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=info
LOG_DIR=./logs

# ============================================
# Sentry Error Tracking (Optional)
# ============================================
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ============================================
# Node Environment
# ============================================
NODE_ENV=development
