# ============================================
# SUFBOT V5 - Production Environment Configuration
# ============================================
# Copy this file to .env on your production server
# and update the values accordingly

# ============================================
# Discord Bot Configuration
# ============================================
DISCORD_TOKEN=YOUR_DISCORD_BOT_TOKEN
DISCORD_CLIENT_ID=1444623911290671114
DISCORD_CLIENT_SECRET=YOUR_DISCORD_CLIENT_SECRET
DISCORD_GUILD_ID=1129729404831006760

# Bot Owner Discord User IDs (comma-separated for multiple owners)
BOT_OWNER_IDS=613695183933931520

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql://sufbotv5:YOUR_PASSWORD@YOUR_HOST:5432/sufbotv5?schema=public
POSTGRES_USER=sufbotv5
POSTGRES_PASSWORD=YOUR_PASSWORD
POSTGRES_DB=sufbotv5

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://default:YOUR_REDIS_PASSWORD@YOUR_REDIS_HOST:18701
REDIS_HOST=YOUR_REDIS_HOST
REDIS_PORT=18701
REDIS_PASSWORD=YOUR_REDIS_PASSWORD

# ============================================
# API Configuration (PRODUCTION)
# ============================================
API_PORT=4000
API_URL=https://apisufbot.olnk.tr
API_SECRET=YOUR_API_SECRET

# ============================================
# JWT Configuration
# ============================================
JWT_SECRET=YOUR_JWT_SECRET
JWT_REFRESH_SECRET=YOUR_JWT_REFRESH_SECRET
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# ============================================
# Panel Configuration (PRODUCTION)
# ============================================
PANEL_URL=https://sufbot.olnk.tr
NEXT_PUBLIC_API_URL=https://apisufbot.olnk.tr
NEXT_PUBLIC_DISCORD_CLIENT_ID=1444623911290671114
NEXT_PUBLIC_BOT_INVITE_URL=https://discord.com/api/oauth2/authorize?client_id=1444623911290671114&permissions=27648860222&scope=bot%20applications.commands
NEXTAUTH_URL=https://sufbot.olnk.tr
NEXTAUTH_SECRET=YOUR_NEXTAUTH_SECRET

# ============================================
# WebSocket Configuration
# ============================================
WS_PORT=4001
WS_SECRET=YOUR_WS_SECRET

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=60

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=info
LOG_DIR=./logs

# ============================================
# Node Environment
# ============================================
NODE_ENV=production
